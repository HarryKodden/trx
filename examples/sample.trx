TYPE PERSON FROM TABLE person;

FUNCTION process_employee(employee: PERSON) : PERSON {
    VAR result := employee;

    IF employee.ACTIVE {
        result.SALARY := employee.SALARY * 1.1;
    } ELSE {
        result.SALARY := 0;
    }

    inner();

    exec sql declare c1 cursor for select person_id, department from employee where person_id = employee.id;
    exec sql open c1;
        var employee from table employee;
        exec sql fetch c1 into :employee.person_id, :employee.department;

    exec sql close c1;
    
    WHILE result.SALARY < 50000 {
        result.SALARY := result.SALARY + 1000;
    }

    IF employee.ACTIVE {
        result.SALARY := result.SALARY * 1.15;
    }

    RETURN result;
}

FUNCTION calculate_bonus(person: PERSON) : PERSON {
    VAR result := person;
    result.SALARY := person.SALARY * 1.1;
    RETURN result;
}

